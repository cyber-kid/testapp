<!DOCTYPE ui:UiBinder SYSTEM
        "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="com.home.client.resources.AppResources" />

    <ui:style>
        .wiggetContainer {
            border-bottom: rgba(56,63,88, .2) solid 1px;
            padding: 0px 5px;
        }
    </ui:style>

    <g:SimplePanel addStyleNames="{style.wiggetContainer}">
        <g:Label ui:field="item" addStyleNames="{res.appStyle.text}"/>
    </g:SimplePanel>
</ui:UiBinder>